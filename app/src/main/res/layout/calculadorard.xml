<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculadorard">

    <EditText
        android:id="@+id/et1"
        android:layout_width="251dp"
        android:layout_height="0dp"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:hint="Ingresa un número"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="251dp"
        android:layout_height="63dp"
        android:ems="10"
        android:hint="Ingresa otro número"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.241" />

    <TextView
        android:id="@+id/resultado2"
        android:layout_width="151dp"
        android:layout_height="77dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.871" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="148dp"
        android:layout_height="52dp"
        android:text="RESULTADO"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.79" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rdBtnRestar"
            android:layout_width="136dp"
            android:layout_height="38dp"
            android:text="RESTAR"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/rdBtnMultiplicar"
            android:layout_width="136dp"
            android:layout_height="38dp"
            android:text="MULTIPLICAR"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/rdBtnDivision"
            android:layout_width="136dp"
            android:layout_height="38dp"
            android:text="DIVIDIR"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/rdBtnSumar"
            android:layout_width="136dp"
            android:layout_height="38dp"
            android:text="SUMAR"
            tools:ignore="TouchTargetSizeCheck" />
    </RadioGroup>

    <Button
        android:id="@+id/botonOperacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sumar"
        android:text="Calcular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.679" />

</androidx.constraintlayout.widget.ConstraintLayout>